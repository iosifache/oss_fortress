{
    "editor.rulers": [
        80
    ],
    "black-formatter.path": [
        ".venv/bin/black"
    ],
    "flake8.path": [
        ".venv/bin/flake8"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "isort.path": [
        ".venv/bin/isort"
    ],
    "isort.check": true,
    "files.exclude": {
        ".git": true,
        ".venv": true,
        "poetry.lock": true,
        "__pycache__": true,
        "wiki/.docusaurus": true,
        "wiki/node_modules": true
    },
    "markdown.marp.enableHtml": true,
}